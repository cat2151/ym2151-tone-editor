# YM2151 Tone Editor Keybinds Configuration
#
# 課題 : アプリdefaultのkeybindsが頻繁に破壊的変更されており、こちらは追いついていない。対策、様子見
# 
# This file allows you to customize keyboard shortcuts for the editor.
# Format: "Key" = "action"
#
# Available keys:
# - Letter keys: "a", "b", ... "z" (lowercase)
# - Letter keys with shift: "A", "B", ... "Z" (uppercase)
# - Number keys: "0", "1", ... "9"
# - Special keys with shift: "!", "@", "#", "$", "%", "^", "&", "*", "(", ")"
# - Other special chars: "+", "-", "_", "=", ".", ",", "<", ">", "/", "?"
# - Arrow keys: "Left", "Right", "Up", "Down"
# - Special keys: "Home", "End", "PageUp", "PageDown", "Esc", "Space"
# - Modifier combinations: "Ctrl+1", "Ctrl+Shift+1", etc.
#
# Available actions:
# - decrease_value, increase_value
# - set_value_to_max, set_value_to_min, set_value_to_random
# - increase_value_by1 through increase_value_by10
# - decrease_value_by1 through decrease_value_by10
# - play_current_tone
# - increase_fb, decrease_fb
# - move_cursor_left, move_cursor_right, move_cursor_up, move_cursor_down
# - jump_to_op1_and_increase, jump_to_op2_and_increase, jump_to_op3_and_increase, jump_to_op4_and_increase
# - jump_to_op1_and_decrease, jump_to_op2_and_decrease, jump_to_op3_and_decrease, jump_to_op4_and_decrease
# - jump_to_ar_and_increase, jump_to_d1r_and_increase, jump_to_d2r_and_increase, jump_to_rr_and_increase
# - jump_to_ar_and_decrease, jump_to_d1r_and_decrease, jump_to_d2r_and_decrease, jump_to_rr_and_decrease
# - exit

[keybinds]
# Value modification keys
"q" = "decrease_value"
"PageDown" = "decrease_value"
"e" = "increase_value"
"PageUp" = "increase_value"
"Home" = "set_value_to_max"
"End" = "set_value_to_min"
"r" = "set_value_to_random"
"R" = "set_value_to_random"

# Increase/decrease by 1
"+" = "increase_value_by1"
"." = "increase_value_by1"
"-" = "decrease_value_by1"
"," = "decrease_value_by1"

# Increase/decrease by 10
">" = "increase_value_by10"
"_" = "decrease_value_by10"
"<" = "decrease_value_by10"

# Number keys for quick value adjustment
"5" = "increase_value_by5"
"6" = "increase_value_by6"
"7" = "increase_value_by7"
"8" = "increase_value_by8"
"9" = "increase_value_by9"
"0" = "increase_value_by10"

# SHIFT + number keys for decrease
"%" = "decrease_value_by5"
"^" = "decrease_value_by6"
"&" = "decrease_value_by7"
"*" = "decrease_value_by8"
"(" = "decrease_value_by9"
")" = "decrease_value_by10"

# Play current tone
"p" = "play_current_tone"
"P" = "play_current_tone"
"Space" = "play_current_tone"

# FB (Feedback) shortcuts
"f" = "increase_fb"
"F" = "decrease_fb"

# Cursor movement (vi-style)
"h" = "move_cursor_left"
"j" = "move_cursor_down"
"k" = "move_cursor_up"
"l" = "move_cursor_right"

# Cursor movement (arrow keys)
"Left" = "move_cursor_left"
"Down" = "move_cursor_down"
"Up" = "move_cursor_up"
"Right" = "move_cursor_right"

# Jump to operator rows and adjust values
# 1,2,3,4 jumps to O1,O2,O3,O4 respectively and increases value
"1" = "jump_to_op1_and_increase"
"2" = "jump_to_op2_and_increase"
"3" = "jump_to_op3_and_increase"
"4" = "jump_to_op4_and_increase"

# SHIFT+1,2,3,4 jumps to O1,O2,O3,O4 respectively and decreases value
"!" = "jump_to_op1_and_decrease"
"\"" = "jump_to_op2_and_decrease"
"#" = "jump_to_op3_and_decrease"
"$" = "jump_to_op4_and_decrease"

# ADSR envelope shortcuts
# A,D,S,R keys jump to AR, D1R, D2R, RR parameters on current row and increase
"a" = "jump_to_ar_and_increase"
"d" = "jump_to_d1r_and_increase"
"s" = "jump_to_d2r_and_increase"
"r" = "jump_to_rr_and_increase"

# SHIFT+A,D,S,R keys jump to AR, D1R, D2R, RR parameters on current row and decrease
"A" = "jump_to_ar_and_decrease"
"D" = "jump_to_d1r_and_decrease"
"S" = "jump_to_d2r_and_decrease"
"R" = "jump_to_rr_and_decrease"

# Exit
"Esc" = "exit"
